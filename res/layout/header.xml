<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/header"
    android:layout_height="wrap_content" android:padding="0dp">

    <Button
        android:id="@+id/map_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" android:text="Maps" style="@style/BlueButton" android:layout_marginLeft="5dp"/>
    
    <Button
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:visibility="gone"
        android:layout_centerVertical="true" android:text="Back" style="@style/BlueButton" android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_title"
        android:textColor="#FFFFFF" android:layout_toRightOf="@id/map_btn" android:gravity="center" android:layout_centerVertical="true" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>

</RelativeLayout>