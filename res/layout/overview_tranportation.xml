                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/pin_red_selector" 
                    android:id="@+id/trans_locate3_btn"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
