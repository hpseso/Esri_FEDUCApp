<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" android:id="@+id/home_container">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:background="@drawable/key_message"
                android:layout_height="265dp" >
                
                    <LinearLayout
                        android:layout_width="fill_parent"
                    	android:layout_height="wrap_content"
                    	android:layout_alignParentBottom="true" 
                    	android:paddingBottom="3dp"
                    	android:gravity="right"
                        android:layout_alignParentRight="true" 
                        android:paddingLeft="8dp" android:paddingRight="4dp">

                        <Button
                            android:id="@+id/blog_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/blog_btn_selector" android:layout_marginLeft="1dp" android:layout_marginRight="1dp"/>

                        <Button
                            android:id="@+id/in_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/in_btn_selector" android:layout_marginLeft="1dp" android:layout_marginRight="1dp"/>

                        <Button
                            android:id="@+id/fb_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/fb_btn_selector" android:layout_marginLeft="1dp" android:layout_marginRight="1dp"/>

                        <Button
                            android:id="@+id/tweet_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/tweet_btn_selector" android:layout_marginLeft="1dp" android:layout_marginRight="1dp"/>

                    </LinearLayout>
                
            </RelativeLayout>

            <TextView
                style="@style/Font.Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/home_content4" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>