<?xml version="1.0" encoding="utf-8"?>
 <FrameLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
     android:layout_height="fill_parent" android:background="@drawable/background_portrait">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical" android:layout_marginBottom="36dp">

         <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/submenubar_pointer"
             android:gravity="center_vertical"
             android:padding="0dp" >

             <TextView
                 style="@style/Font.Normal.Bold"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:gravity="left|center_vertical"
                 android:textSize="14dp" />

             <TextView
                 style="@style/Font.Normal.Bold"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:gravity="center"
                 android:text="App Demo"
                 android:textSize="14dp" />

             <TextView
                 style="@style/Font.Normal.Bold"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:gravity="right|center_vertical"
                 android:text="Survey"
                 android:textSize="14dp" />
         </LinearLayout>

         <RelativeLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" >

             <ViewFlipper
                 android:id="@+id/viewFlipper1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" >

                 

                 <ImageView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:src="@drawable/welcome_screen" android:layout_gravity="center_horizontal" android:contentDescription="TODO" android:tag="1"/>

                 <RelativeLayout
                     android:layout_width="match_parent"
                     android:layout_height="330dp" android:tag="2">

                     <ImageView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:src="@drawable/welcome_screen_noarrow"
                         android:layout_centerHorizontal="true"/>

                     <Button
                         android:id="@+id/no3_btn"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:background="@drawable/no3_selector" android:layout_marginTop="22dp" android:layout_marginLeft="35dp"/>

                     <TextView
                         android:id="@+id/help3_txvw"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="3. Tap to open the map view." android:textColor="#FFFFFF" android:layout_marginTop="50dp" android:layout_marginLeft="70dp" android:background="@drawable/blue_box" android:visibility="gone"/>

                     <Button
                         android:id="@+id/no2_btn"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content" android:background="@drawable/no2_selector" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" android:layout_marginBottom="40dp" android:layout_marginRight="40dp"/>

                     <Button
                         android:id="@+id/no1_btn"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_alignParentRight="true" android:layout_marginRight="25dp" android:background="@drawable/no1_selector"/>
                     
                     <TextView
                         android:id="@+id/help1_txvw"
                         android:layout_width="200dp"
                         android:layout_height="wrap_content"
                         android:text="1. Tap the next/previous button to go to other panels." android:layout_centerVertical="true" android:layout_alignParentRight="true" android:layout_marginRight="75dp" android:textColor="#FFFFFF" android:background="@drawable/blue_box" android:visibility="gone"/>


                     <TextView
                         android:id="@+id/help2_txvw"
                         android:layout_width="200dp"
                         android:layout_height="wrap_content"
                         android:text="2. Tap any of these buttons to open the various social media web views."
                         android:textColor="#FFFFFF" android:layout_alignParentBottom="true" android:layout_marginBottom="50dp" android:layout_alignParentRight="true" android:layout_marginRight="80dp" android:background="@drawable/blue_box" android:visibility="gone"/>

                 </RelativeLayout>
                 
                 <RelativeLayout
                      android:layout_width="match_parent"
                      android:layout_height="330dp"
                      android:tag="3" >

                      <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_horizontal"
                          android:contentDescription="TODO"
                          android:src="@drawable/tab_screen" />

                      <Button
                          android:id="@+id/no11_btn"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:background="@drawable/no1_selector" android:layout_marginTop="40dp" android:layout_marginLeft="100dp"/>

                      <Button
                          android:id="@+id/no12_btn"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:background="@drawable/no2_up_selector" android:layout_marginTop="100dp" android:layout_marginLeft="50dp"/>

                      <TextView
                          android:id="@+id/help12_txvw"
                          android:layout_width="200dp"
                          android:layout_height="wrap_content"
                          android:background="@drawable/blue_box"
                          android:text="2. Show the details of a specific exhibitor item."
                          android:textColor="#FFFFFF" android:layout_marginTop="150dp" android:layout_marginLeft="80dp" android:visibility="gone"/>

                      <TextView
                          android:id="@+id/help11_txvw"
                          android:layout_width="200dp"
                          android:layout_height="wrap_content"
                          android:background="@drawable/blue_box"
                          android:text="1. Filters between exhibitors, sponsors and EXPO hours."
                          android:textColor="#FFFFFF" android:layout_marginTop="80dp" android:layout_marginLeft="100dp" android:visibility="gone"/>
                  </RelativeLayout>
                 
                 
                 <RelativeLayout
                     android:layout_width="match_parent"
                     android:layout_height="330dp"
                     android:tag="4" >

                     <ImageView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_centerHorizontal="true"
                         android:src="@drawable/info_screen" />

                     <Button
                         android:id="@+id/help21_btn"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_alignParentBottom="true"
                         android:layout_marginBottom="18dp"
                         android:background="@drawable/no1_selector" android:layout_centerHorizontal="true"/>

                     <TextView
                         android:id="@+id/help21_txvw"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_above="@+id/help21_btn"
                         android:layout_centerHorizontal="true"
                         android:background="@drawable/blue_box"
                         android:text="1. Filter between the various map viewes."
                         android:textColor="#FFFFFF" android:width="200dp" android:visibility="gone"/>

                     <Button
                         android:id="@+id/help22_btn"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_alignParentTop="true"
                         android:layout_centerHorizontal="true"
                         android:layout_marginTop="52dp"
                         android:background="@drawable/no2_selector" />

                     <TextView
                         android:id="@+id/help22_txvw"
                         android:layout_width="200dp"
                         android:layout_height="wrap_content"
                         android:layout_alignLeft="@+id/help21_txvw"
                         android:layout_below="@+id/help22_btn"
                         android:background="@drawable/blue_box"
                         android:text="2. Balloon marks show various items on the map."
                         android:textColor="#FFFFFF" android:visibility="gone"/>

                 </RelativeLayout>

             </ViewFlipper>

             <Button
                 android:id="@+id/prev_btn"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_centerVertical="true"
                 android:background="@drawable/demo_next_btn_selector" />

             <Button
                 android:id="@+id/next_btn"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                 android:layout_centerVertical="true"
                 android:background="@drawable/demo_prev_btn_selector" />
         </RelativeLayout>

     </LinearLayout>

 </FrameLayout>
